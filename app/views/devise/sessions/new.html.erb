<div class="login">
  <div class="container">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4 jumbotron">
        <h2 class="text-center">サインイン</h2>
        <%= form_for resource, as: resource_name,
          url: session_path(resource_name) do |f| %>
          <div class="field">
            <%= f.label :email, "メール" %><br />
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "off",
              class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-block btn-primary" %>
          </div>
        <% end %>
        <hr>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
