<div class="col-md-6 col-sm-6 col-xs-6 news-feed-middle middle-follow-users">
  <div class="follow-users-content">
    <% users.each do |user| %>
      <%= render "user", user: user %>
    <% end %>
  </div>

  <div id="load-more-follow-users">
    <% unless users.empty? %>
      <%= link_to "もっと見る", follow_users_path(type: @type,
        follow_users_offset: users.last.id - 1), remote: true %>
    <% end %>
  </div>
</div>
