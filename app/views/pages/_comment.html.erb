<div class="comments">
  <div class="comments-header">
    <span class="comments-header-content">
      <span class="comments-image">
        <%= link_to "#" do %>
          <%= image_tag avatar_profile(current_user), class: "img-responsive
            comments-header-avatar" %>
        <% end %>
      </span>

      <div class="comments-header-info">
        <h6><%= link_to current_user.full_name, "#" %></h6>
        <span>
          Vi du ve description
        </span>
        <div>
          <span>
            <%= link_to "ライク", "#" %>
          </span>

          <span>
            <%= link_to "返信", "#" %>
          </span>

          <span>
            -
          </span>

          <span>
            <%#= time_ago_in_words comment.created_at %>
            <%= time_ago_in_words Time.now %>
          </span>
        </div>
      </div>
    </span>
  </div>
</div>
