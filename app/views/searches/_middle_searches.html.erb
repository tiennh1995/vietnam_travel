<div class="col-md-6 col-sm-6 col-xs-6 news-feed-middle">
  <div class="news-feed-middle-content with-padding searches">
    <div class="search-image">
      <h2>写真</h2>
      <ul>
        <% @images.each do |image| %>
          <li>
            <% if image.share_id %>
              <%= render "searches/share_image", image: image %>
            <% else %>
              <%= render "searches/image", image: image %>
            <% end %>
          </li>
        <% end %>
        <div class="clearfix"></div>
      </ul>
      <hr>
    </div>

    <div class="search-user">
      <h2>ユーザー</h2>
      <ul>
        <% @users.each do |user| %>
          <%= link_to user do %>
            <li class="col-md-6">
              <span class="search-user-img">
                <%= image_tag avatar_profile(user),
                  class: "img-responsive user-img" %>
              </span>
              <span class="search-user-str">
                <%= user.full_name %>
              </span>
              <div class="clearfix"></div>
            </li>
          <% end %>
        <% end %>
        <div class="clearfix"></div>
      </ul>
      <hr>
    </div>

    <div class="search-address">
      <h2>アドレス</h2>
      <span>
        <span>全部アドレス:  </span>
        <% @addresses.each do |address| %>
          <%= link_to images_path(address: address) do %>
            <span class="search-address-str">
              <%= address %>
            </span>
          <% end %>
          <% if address != @addresses.last %>
            <span>,</span>
          <% end %>
        <% end %>
        <div class="clearfix"></div>
      </span>
      <hr>
    </div>

    <div class="search-category">
      <h2>カテゴリー</h2>
      <span>
        <span>全部カテゴリー:  </span>
        <% @categories.each do |category| %>
          <%= link_to images_path(category: category.id) do %>
            <span class="search-address-str">
              <%= category.name %>
            </span>
          <% end %>
          <% if category != @categories.last %>
            <span>,</span>
          <% end %>
        <% end %>
        <div class="clearfix"></div>
      </span>
    </div>
  </div>
</div>
