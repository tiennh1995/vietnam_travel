<div id="user-cover-modal" class="modal fade" role="dialog">
  <div class="modal-dialog cover-modal">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          &times;
        </button>
        <h4 class="modal-title">カバーを編集</h4>
      </div>
      <div class="modal-body">
        <%= form_for @user, method: :patch, multipart: true,
          authenticity_token: true, remote: true do |f| %>
          <div class="user-form-errors">
            <%= render "shared/error_messages", object: @user %>
          </div>

          <div class="user-cover-img">
            <div>
              <%= image_tag @user.cover_url, class: "img-responsive
                user-cover-edit" %>
            </div>
            <span>
              <%= f.file_field :cover, class: "cover-file-field" %>
            </span>
          </div>

          <div class="user-form-submit">
            <%= f.submit "保存", class: "btn btn-primary user-cover-btn-save" %>
            <button class="btn btn-danger user-cover-btn-cancel"
              data-dismiss="modal">
              キャンセル
            </button>
          </div>
          <div class="clearfix"></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
