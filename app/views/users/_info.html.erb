<div class="user-infomation">
  <div class="info">
    <%= label_tag "メイル: " %>
    <%= @user.email %>
  </div>

  <div class="info">
    <%= label_tag "電話番号: " %>
    <%= @user.profile.phone_number %>
  </div>

  <div class="info">
    <%= label_tag "出身所: " %>
    <%= @user.profile.place_birth %>
  </div>

  <div class="info">
    <%= label_tag "誕生日: " %>
    <%= @user.profile.birthday %>
  </div>
  <% if current_user.current_user? @user %>
    <%= link_to edit_user_path(@user, type: "info"), remote: true,
      class: "btn btn-primary user-edit-btn" do %>
      ユーザー情報を編集
    <% end %>

    <%= link_to edit_user_path(@user, type: "password"), remote: true,
      class: "btn btn-info user-edit-password" do %>
      パスワードを編集
    <% end %>
  <% end %>
  <div class="clearfix"></div>
</div>
