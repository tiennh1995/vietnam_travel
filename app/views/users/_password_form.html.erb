<div id="password-modal-form" class="modal fade" role="dialog">
  <div class="modal-dialog password-modal">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          &times;
        </button>
        <h4 class="modal-title">パスワードを編集</h4>
      </div>
      <div class="modal-body">
        <%= form_for @user, remote: true, method: :patch do |f| %>
          <div class="user-form-errors">
            <%= render "shared/error_messages", object: @user %>
          </div>
          <%= f.label :current_password, "現在のパスワード" %>
          <%= f.password_field :current_password, class: "form-control" %>
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, class: "form-control" %>
          <%= f.label :password_confirmation, "確認のパスワード" %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
          <div class="actions">
            <%= f.submit "保存", class: "btn btn-primary btn-password-save" %>
            <button class="btn btn-danger btn-password-cancel">
              キャンセル
            </button>
          </div>
          <div class="clearfix"></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
